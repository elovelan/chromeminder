{
    "name": "__MSG_appName__",
    "version": "0.0.8",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "48": "images/infinibee48x48.png",
        "128": "images/infinibee128x128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "bower_components/requirejs/require.js",
            "scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/infinibee19x19.png",
            "38": "images/infinibee38x38.png"
        },
        "default_title": "Beeminder",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "https://www.beeminder.com/"
    ],
    "options_page": "options.html"
}